<idea-plugin>
    <id>org.ancelotow.sql-server-monitoring</id>
    <name>SQL Server Monitoring</name>
    <vendor email="ancelotow@icloud.com">>Ancelotow</vendor>

    <description><![CDATA[
        Enter short description for your plugin here.<br>
        <em>most HTML tags may be used</em>
    ]]></description>

    <depends>com.intellij.modules.compose</depends>
    <depends>com.intellij.database</depends>
    <idea-version since-build="231.0"/>

    <resource-bundle>messages.MyMessageBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="SQL Server Monitoring"
                    factoryClass="org.ancelotow.sqlservermonitoring.SqlServerMonitoringWindowFactory"
                    icon="/icons/icon-light.svg"
                    anchor="right"/>
    </extensions>
</idea-plugin>